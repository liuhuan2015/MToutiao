<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liuh.mtoutiao.ui.activity.MainActivity">

    <com.liuh.mtoutiao.ui.widget.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.chaychan.library.BottomBarLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/tab_bg">

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:touchDrawable="@drawable/selector_bottom_tab"
            app:iconNormal="@drawable/tab_home_normal"
            app:iconSelected="@drawable/tab_home_selected"
            app:itemMarginTop="-5dp"
            app:itemText="@string/tab_home"
            app:itemTextSize="8dp"
            app:openTouchBg="true"
            app:textColorNormal="@color/common_grey"
            app:textColorSelected="@color/status_color_red" />

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:touchDrawable="@drawable/selector_bottom_tab"
            app:iconNormal="@drawable/tab_video_normal"
            app:iconSelected="@drawable/tab_video_selected"
            app:itemMarginTop="-5dp"
            app:itemText="@string/tab_video"
            app:itemTextSize="8dp"
            app:openTouchBg="true"
            app:textColorNormal="@color/common_grey"
            app:textColorSelected="@color/status_color_red" />

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:touchDrawable="@drawable/selector_bottom_tab"
            app:iconNormal="@drawable/tab_micro_normal"
            app:iconSelected="@drawable/tab_micro_selected"
            app:itemMarginTop="-5dp"
            app:itemText="@string/tab_micro"
            app:itemTextSize="8dp"
            app:openTouchBg="true"
            app:textColorNormal="@color/common_grey"
            app:textColorSelected="@color/status_color_red" />

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:touchDrawable="@drawable/selector_bottom_tab"
            app:iconNormal="@drawable/tab_me_normal"
            app:iconSelected="@drawable/tab_me_selected"
            app:itemMarginTop="-5dp"
            app:itemText="@string/tab_me"
            app:itemTextSize="8dp"
            app:openTouchBg="true"
            app:textColorNormal="@color/common_grey"
            app:textColorSelected="@color/status_color_red" />


    </com.chaychan.library.BottomBarLayout>

</LinearLayout>
